{
  "name": "kanshi-js",
  "version": "0.1.0",
  "description": "An easy-to-use, efficient, and performant filesystem watcher",
  "main": "./lib/index.cjs",
  "scripts": {
    "build": "npm run build:rs && npm run build:ts",
    "build:rs": "cargo build --release --message-format=json-render-diagnostics > cargo.log",
    "build:cross": "cross build --release --message-format=json-render-diagnostics > cargo.log",
    "build:ts": "tsc -p tsconfig.build.json",
    "test": "npm run build && npm run test:rs && mocha -r ts-node/register test/index.test.ts -R spec",
    "test:rs": "cargo test --release",
    "version": "neon bump --binaries platforms && git add .",
    "prepack": "npm run build:ts && neon update"
  },
  "author": "Carl Voller",
  "license": "BSD-3-Clause",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "types": "./lib/index.d.cts",
  "files": [
    "lib/**/*.?({c,m}){t,j}s"
  ],
  "neon": {
    "type": "library",
    "org": "@kanshi-js",
    "platforms": "common",
    "load": "./js/load.cts"
  },
  "devDependencies": {
    "@neon-rs/cli": "^0.1.82",
    "@tsconfig/node20": "^20.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@neon-rs/load": "^0.1.82",
    "mocha": "^11.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlvoller/kanshi.git"
  },
  "bugs": {
    "url": "https://github.com/carlvoller/kanshi/issues"
  },
  "homepage": "https://github.com/carlvoller/kanshi/tree/main/kanshi-js#readme",
  "optionalDependencies": {
    "@kanshi-js/win32-x64-msvc": "0.1.0",
    "@kanshi-js/darwin-x64": "0.1.0",
    "@kanshi-js/darwin-arm64": "0.1.0",
    "@kanshi-js/linux-x64-gnu": "0.1.0",
    "@kanshi-js/linux-arm64-gnu": "0.1.0"
  }
}
